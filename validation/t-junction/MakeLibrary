echo "creating shared library"
make
echo "setting LD_LIBRARY_PATH to su2 main directory"
# note that this will set the environment variable but it exists only during script runtime, or you have to source the script 
#export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$SU2_HOME
source setlibrarypath.sh
echo "done. you can now run su2"
